<h2>Welcome!</h2>

<h5>List of items in <%=@user.username%>'s fridge:</h5>

<ul>
    <%@groceries.each do |grocery|%>
        <li><a href="/groceries/<%=grocery.id%>"><%=grocery.name.titleize%></a></li>
    <%end%>
</ul>

<br/>

<%if Helpers.current_user(session) != @user%>
    <a href="mailto:<%=@user.email%>" class="btn btn-outline-info mx-1" role="button">Contact User</a>
<%end%>

