<h2> Edit Grocery Item </h2>

<form action="/groceries/<%=@grocery.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    
    <label>Name: </label>
    <input type="text" name="grocery[name]" id="name" value="<%=@grocery.name.titleize%>" class="rounded"><br/>
    
    <label>Brand: </label>
    <input type="text" name="grocery[brand]" id="brand" value="<%=@grocery.brand.titleize%>" class="rounded"><br/>
    
    <label>Expiration Date: </label>
    <input type="date" name="grocery[expiration_date]" id="expiration_date" value="<%=@grocery.expiration_date%>" class="rounded"><br/>
    
    <label>Comment: </label>
    <br/>
    <textarea type="text" name="grocery[comment]" value="<%=@grocery.comment%>" rows="3" cols="50" class="rounded"> </textarea>
    <br/>
    <br/>
    
    <button type="submit" class="btn btn-outline-info">Submit</button>
</form>